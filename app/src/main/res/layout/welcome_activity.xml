<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top"
    >

    <ImageView
        android:id="@+id/WelcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/log"/>

    <TextView
        android:id="@+id/WelcomeSubTitle"
        android:layout_below="@+id/WelcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="26dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="Una experiencia Ãºnica en cada viaje"/>

    <Button
        android:id="@+id/login"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/highlight_white"/>

    <Button
        android:id="@+id/registro"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:text="Registro"
        android:textColor="@color/white"
        android:background="@drawable/highlight_button"
        />

</RelativeLayout>
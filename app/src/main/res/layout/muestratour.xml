<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/topPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            >

            <ImageView
                android:id="@+id/backIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_left"
                android:tint="@color/white"
                android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/backIcon"
                android:text="Volver"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_margin="10dp"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/photoOferta"
            android:layout_below="@+id/topPanel"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/playa1" />

        <TextView
            android:id="@+id/TituloOferta"
            android:layout_below="@+id/photoOferta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paseo en la playa"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_below="@+id/TituloOferta"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/PrecioOferta"
            android:layout_below="@+id/TituloOferta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$20.000"
            android:textSize="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/VecesOferta"
            android:layout_below="@+id/PrecioOferta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomado 25 veces"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />


        <Button
            android:id="@+id/LikesOferta"
            android:layout_below="@+id/VecesOferta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comprar"
            android:background="@drawable/highlight_button"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_below="@+id/LikesOferta"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/DescripcionOferta"
            android:layout_below="@+id/LikesOferta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sus aguas son muy tranquilas, claras, cristalinas y tienen un color verdoso, lo que hace que la playa sea preciosa. Es perfecta para quienes buscan un lugar para relajarse y descansar."
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            />


        <TextView
            android:id="@+id/textGuia"
            android:layout_below="@+id/DescripcionOferta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guia:"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>




        <TextView
            android:id="@+id/nombreGuiaOferta"
            android:layout_toRightOf="@+id/PerfilOferta"
            android:layout_below="@+id/textGuia"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:onClick="onCLick"
            android:clickable="true"
            android:text="Ian Orellana"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/PerfilOferta"
            android:layout_below="@id/textGuia"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/persona"/>
        <View
            android:layout_width="match_parent"
            android:layout_below="@+id/DescripcionOferta"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <View
            android:layout_width="match_parent"
            android:layout_below="@+id/PerfilOferta"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

    </RelativeLayout>
</ScrollView>
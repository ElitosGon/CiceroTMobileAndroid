<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/datosContent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">



        <TextView
            android:id="@+id/SearchProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="20dp"
            android:inputType="text"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary"
            android:text="Información de la compra"/>
    </RelativeLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:layout_below="@id/datosContent"
        android:layout_above="@+id/cancelButton">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/icono"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="17dp"/>

            <TextView
                android:id="@+id/nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icono"
                android:text="Nombre"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/super_title"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                />

            <TextView
                android:id="@+id/apellido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/nombre"
                android:text="Apellido"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/super_title"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                />

            <TextView
                android:id="@+id/prevision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ciudad"
                android:layout_toRightOf="@+id/icono"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/nombre"
                android:textSize="@dimen/title"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Solicitado el 08/02/2017"
                android:layout_toRightOf="@+id/icono"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/prevision"
                android:textSize="12sp"
                android:textColor="@color/grey"/>


            <RelativeLayout
                android:id="@+id/motivoContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fecha">

                <TextView
                    android:id="@+id/mot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tour solicitado:"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/form_marginLeft"
                    android:textSize="@dimen/title"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Tour principal"
                    android:layout_below="@+id/mot"
                    android:layout_marginLeft="@dimen/form_marginLeft"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="@dimen/content"
                    android:textColor="@color/black"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/motivoContent"
                android:background="@drawable/custom_fit">


                <TextView
                    android:id="@+id/dir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ubicación:"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/form_marginLeft"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/title"/>

                <TextView
                    android:id="@+id/ciudad"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Santiago"
                    android:layout_below="@+id/dir"
                    android:layout_marginLeft="@dimen/form_marginLeft"
                    android:textSize="@dimen/content"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/region"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Región Metropolitana"
                    android:layout_below="@+id/ciudad"
                    android:layout_marginLeft="@dimen/form_marginLeft"
                    android:textSize="@dimen/content"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Third"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Second"
                android:layout_marginBottom="10dp">


                <TextView
                    android:id="@+id/p1"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Condiciones:"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/form_marginLeft"
                    android:textSize="@dimen/title"/>

                <TextView
                    android:id="@+id/terminos"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Términos y condiciones"
                    android:layout_marginLeft="@dimen/form_marginLeft"
                    android:layout_below="@id/p1"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="@dimen/content"
                    android:textColor="@color/black"/>


                <RelativeLayout
                    android:id="@+id/textPrevision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/terminos"
                    android:background="@drawable/custom_fit">
                    <TextView
                        android:id="@+id/p2"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Precio :"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/form_marginLeft"
                        android:textSize="@dimen/title"/>

                    <TextView
                        android:id="@+id/precio"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$50.000"
                        android:layout_below="@+id/p2"
                        android:layout_marginLeft="@dimen/form_marginLeft"
                        android:textSize="@dimen/content"
                        android:textColor="@color/black"/>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/textNotas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textPrevision"
                    android:background="@drawable/custom_fit">
                    <TextView
                        android:id="@+id/p4"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agregar nota (Opcional) :"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/form_marginLeft"
                        android:textSize="@dimen/title"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@android:color/transparent"
                        android:focusable="true"
                        android:focusableInTouchMode="true">
                    </LinearLayout>

                    <EditText
                        android:id="@+id/notas"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/p4"
                        android:hint="Nota para el guía"
                        android:layout_marginStart="@dimen/form_marginLeft"
                        android:layout_marginEnd="@dimen/form_marginLeft"
                        android:textSize="@dimen/content"
                        android:textColor="@color/black"/>

                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>
    </ScrollView>

    <View
        android:id="@+id/separator"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary">

    </View>
    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/separator"
        android:layout_alignParentBottom="true"
        android:text="Rechazar"
        android:clickable="true"
        android:background="@drawable/highlight_white"
        android:textColor="@color/colorPrimaryDark"/>
    <Button
        android:id="@+id/acceptButton"
        android:layout_toRightOf="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/highlight_button"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:text="Confirmar servicio"
        android:textColor="@color/white"/>
</RelativeLayout>